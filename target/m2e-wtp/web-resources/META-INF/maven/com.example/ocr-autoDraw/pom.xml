	<version>1.0-SNAPSHOT</version>
	<groupId>com.example</groupId>
	<artifactId>ocr-autoDraw</artifactId>
	
	<dependencies>
		
<!-- https://mvnrepository.com/artifact/org.openpnp/opencv -->
